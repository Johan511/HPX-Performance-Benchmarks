{
  "version": 3,
  "configurePresets": [
    {
      "name": "rostam-base",
      "hidden": true,
      "generator": "Ninja"
    },
    {
      "name": "rostam",
      "binaryDir": "${sourceDir}/build/",
      "installDir": "${sourceDir}/install/",
      "inherits": "rostam-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "BOOST_ROOT": "C:/dev/libraries/boost_1_79_0/"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "x64-debug",
      "binaryDir": "${sourceDir}/build_debug/",
      "installDir": "${sourceDir}/install_debug/",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "HPX_DIR": "C:/dev/HPX/install_debug"
      }
    },
    {
      "name": "x64-release",
      "binaryDir": "${sourceDir}/build/",
      "installDir": "${sourceDir}/install/",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "HPX_DIR": "C:/dev/HPX/install"
      }
    }
  ]
}